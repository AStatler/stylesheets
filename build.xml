<project name="MyProject" default="dist" basedir=".">
    <description>
        Tasks for compiling stylesheets into multiple output formats (ex: combined, href references, etc.)
    </description>
    
    <target name="dist" description="generate the distribution">
        <property name="cda-lantana-styles" location="Stylesheets/CDA/cda-style.xsl"/>
        <xslt in="Stylesheets/CDA/cda.xsl" style="compile.xsl" out="Stylesheets/CDA/dist/cda-combined.xsl">
            <param name="combineFile" expression="${cda-lantana-styles}" type="STRING" />
        </xslt>
        <xslt in="Stylesheets/CDA/cda.xsl" style="compile.xsl" out="Stylesheets/CDA/dist/cda-combined-web.xsl" force="true">
            <param name="combineFile" expression="${cda-lantana-styles}" type="STRING" />
            <param name="bootstrap-css-cdn" expression="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css" type="STRING" />
            <param name="bootstrap-js-cdn" expression="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js" type="STRING" />
            <param name="jquery-js-cdn" expression="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.1/jquery.min.js" type="STRING" />
            <param name="jquery-ui-js-cdn" expression="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js" type="STRING" />
        </xslt>
    </target>
</project>